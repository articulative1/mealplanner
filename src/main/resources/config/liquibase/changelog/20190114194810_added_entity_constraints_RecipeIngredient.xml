<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity RecipeIngredient.
    -->
    <changeSet id="20190114194810-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="meal_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient_meal_id"
                                 referencedColumnNames="id"
                                 referencedTableName="meal"/>

        <addForeignKeyConstraint baseColumnNames="ingredient_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient_ingredient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ingredient"/>

    </changeSet>
</databaseChangeLog>
